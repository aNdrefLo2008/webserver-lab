[Unit]
Description=Web Server Instance 1
After=network.target

[Service]
Type=simple
User=andrei
WorkingDirectory=/home/andrei/webserver-lab/app
Environment="PORT=8001"
Environment="SERVER_ID=server-1"
ExecStart=/usr/bin/python3 /home/andrei/webserver-lab/app/app.py
Restart=always
RestartSec=5
StandardOutput=append:/home/andrei/webserver-lab/logs/server-1.log
StandardError=append:/home/andrei/webserver-lab/logs/server-1-error.log

[Install]
WantedBy=multi-user.target
